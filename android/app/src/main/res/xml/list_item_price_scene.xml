<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="300">
        <KeyFrameSet></KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/from_input_layout"
            android:layout_width="@dimen/constraint_fill"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_xsmall"
            android:layout_marginEnd="@dimen/margin_small"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toLeftOf="@id/to_input_layout"
            motion:layout_constraintTop_toBottomOf="@id/title"/>
        <Constraint
            android:id="@+id/to_input_layout"
            android:layout_width="@dimen/constraint_fill"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_xsmall"
            android:layout_marginStart="@dimen/margin_small"
            motion:layout_constraintLeft_toRightOf="@id/from_input_layout"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/title"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/from_input_layout"
            android:layout_width="@dimen/constraint_fill"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_xsmall"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toLeftOf="@id/to_input_layout"
            motion:layout_constraintTop_toBottomOf="@id/title"/>
        <Constraint
            android:id="@+id/to_input_layout"
            android:layout_width="@dimen/constraint_fill"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_xsmall"
            android:layout_marginStart="@dimen/margin_small"
            android:visibility="gone"
            motion:layout_constraintLeft_toRightOf="@id/from_input_layout"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/title"/>
    </ConstraintSet>
</MotionScene>