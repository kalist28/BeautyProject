<resources>

    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="android:colorBackground">@color/background</item>
    </style>

    <style name="BaseCardView" parent="CardView.Light">
        <item name="cardElevation">3dp</item>
    </style>
    <style name="DragHandle" parent="Widget.Material3.BottomSheet.DragHandle">
        <item name="android:background">@color/light_onSurface</item>
    </style>

    <style name="WindowChip" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@color/background_chip_window</item>
        <item name="android:textColor">@color/color_chip_window_text</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="AppTheme">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet_light</item>
    </style>

    <style name="Toolbar" parent="Widget.Material3.Toolbar.OnSurface">
        <item name="title">@string/title</item>
        <item name="titleTextColor">@color/onPrimary</item>
        <item name="navigationIcon">@drawable/ic_round_arrow_white</item>
        <item name="navigationIconTint">@color/onPrimary</item>
        <item name="android:background">@color/toolbarBackground</item>
    </style>

    <style name="TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="startIconTint">@color/text_input_box_stroke</item>
        <item name="passwordToggleTint">@color/text_input_box_stroke</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxCornerRadiusTopEnd">@dimen/margin_xsmall</item>
        <item name="boxCornerRadiusTopStart">@dimen/margin_xsmall</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/margin_xsmall</item>
        <item name="boxCornerRadiusBottomStart">@dimen/margin_xsmall</item>
    </style>

    <style name="TextInputEditText" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <!--<item name="android:textColor">@color/light_onSurface</item>-->
    </style>

    <style name="OnContainerImage" parent="Widget.Material3.Toolbar">
        <item name="tint">@color/light_onPrimaryContainer</item>
    </style>

    <style name="DefaultText" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">@color/light_onSurface</item>
    </style>

    <style name="ErrorText" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:textColor">@color/light_error</item>
    </style>

    <style name="TitleText" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:textColor">@color/light_primary</item>
    </style>

    <style name="SubTitleText" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:textColor">#A2A2A2</item>
    </style>

    <style name="BaseDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered" />

    <style name="IconImageView" parent="Widget.Material3.Toolbar">
        <item name="tint">@color/light_primary</item>
    </style>

    <style name="TimePicker" parent="Widget.Material3.MaterialTimePicker" />

    <style name="ShimmerBackground" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:background">@color/light_onSurfaceVariant</item>
    </style>


    <!--<style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
-->

    <style name="BottomNavigation" parent="@style/Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="menu">@menu/menu_main</item>
        <item name="android:background">@color/white</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>


    <style name="TimeRangePickerStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/lightWhite</item>
        <item name="tint">@color/light_primary</item>
        <item name="backgroundTint">@color/dark_primary</item>
        <item name="trp_sliderWidth">35dp</item>
        <item name="trp_sliderRangeGradientStart">@color/dark_primary</item>
        <item name="trp_sliderRangeGradientMiddle">@color/light_primary</item>
        <item name="trp_sliderRangeGradientEnd">@color/dark_primary</item>
        <item name="trp_hourFormat">FORMAT_24</item>
        <item name="trp_thumbColor">@color/lightWhite</item>
        <item name="trp_clockFace">APPLE</item>
        <item name="trp_thumbIconEnd">@drawable/ic_work_off</item>
        <item name="trp_thumbIconColor">@color/dark_primary</item>
        <item name="trp_thumbIconStart">@drawable/ic_work</item>
    </style>

    <style name="TimePickerEditText">
        <item name="colorControlNormal">@color/transparent</item>
    </style>
</resources>
