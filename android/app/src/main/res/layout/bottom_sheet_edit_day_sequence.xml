<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_white_rounded_panel"
    android:theme="@style/AppTheme"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <include
        android:id="@+id/up_selector"
        layout="@layout/view_bottom_sheet_up_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xsmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/topic_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_xsmall"
        android:gravity="center"
        android:text="Рабочее время"
        android:textAllCaps="true"
        android:textColor="@color/colorAccept"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/start_time_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/up_selector" />

    <TextView
        android:id="@+id/start_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/text_medium"
        android:gravity="center"
        android:text="@string/start"
        android:textColor="@color/titleText"
        android:textSize="@dimen/text_medium"
        app:layout_constraintBottom_toTopOf="@id/end_time_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topic_text_view" />

    <ru.kalistratov.template.beauty.presentation.view.time.EditTimeView
        android:id="@+id/start_edit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_medium"
        app:layout_constraintBottom_toBottomOf="@+id/start_time_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/start_time_text_view" />

    <TextView
        android:id="@+id/end_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:gravity="center"
        android:text="@string/end"
        android:textColor="@color/titleText"
        android:textSize="@dimen/text_medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_time_text_view" />

    <ru.kalistratov.template.beauty.presentation.view.time.EditTimeView
        android:id="@+id/end_edit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_medium"
        app:layout_constraintBottom_toBottomOf="@+id/end_time_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/end_time_text_view" />

    <TextView
        android:id="@+id/holiday_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:gravity="center"
        android:text="@string/holiday"
        android:textColor="@color/titleText"
        android:textSize="@dimen/text_medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/end_time_text_view" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/holiday_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/holiday_text_view"
        app:layout_constraintEnd_toEndOf="@+id/end_edit_time"
        app:layout_constraintStart_toStartOf="@id/end_edit_time"
        app:layout_constraintTop_toTopOf="@+id/holiday_text_view"
        app:useMaterialThemeColors="true" />


    <Button
        android:id="@+id/windows_edit_btn"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_small"
        android:background="@drawable/background_rounded_button"
        android:text="Редактировать окна"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/holiday_switch" />

    <Button
        android:id="@+id/saving_button"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_xsmall"
        android:background="@drawable/background_rounded_button"
        android:backgroundTint="@color/colorAccept"
        android:text="Сохранить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/windows_edit_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>
