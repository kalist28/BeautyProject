<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <include
        android:id="@+id/up_bar"
        layout="@layout/view_up_bar" />

    <ImageView
        android:id="@+id/add_window_button"
        android:layout_width="@dimen/up_bar_item"
        android:layout_height="@dimen/up_bar_item"
        android:layout_margin="@dimen/margin_small"
        android:background="@drawable/background_rounded_menu_button_transporent"
        android:padding="@dimen/margin_xsmall"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="@id/up_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/light_primary" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="@dimen/constraint_fill"
        android:layout_height="@dimen/constraint_fill"
        tools:listitem="@layout/list_item_menu_with_badge"
        app:layout_constraintTop_toBottomOf="@id/up_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/margin_small"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>