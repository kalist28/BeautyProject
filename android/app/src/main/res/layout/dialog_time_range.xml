<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        tools:context=".presentation.view.weeksequence.WeekSequenceView">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_work_window"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:fabSize="mini"/>

        <TextView
            android:id="@+id/topic_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:textColor="@color/titleText"
            android:textSize="@dimen/text_medium"
            app:layout_constraintBottom_toBottomOf="@id/icon"
            app:layout_constraintStart_toEndOf="@+id/icon"
            app:layout_constraintTop_toTopOf="@id/icon" />

        <TextView
            android:id="@+id/start_time_text_view"
            android:layout_width="@dimen/constraint_fill"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_small"
            android:layout_marginTop="@dimen/text_medium"
            android:text="Начало :"
            android:textColor="@color/titleText"
            android:textSize="@dimen/text_medium"
            app:layout_constraintEnd_toEndOf="@id/center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon" />

        <ru.kalistratov.template.beauty.presentation.view.time.EditTimeView
            android:id="@+id/start_edit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            app:layout_constraintBottom_toBottomOf="@+id/start_time_text_view"
            app:layout_constraintStart_toEndOf="@id/center"
            app:layout_constraintTop_toTopOf="@+id/start_time_text_view" />

        <TextView
            android:id="@+id/start_error_message"
            android:layout_width="@dimen/constraint_fill"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xsmall"
            android:textColor="@color/exitColor"
            android:textSize="@dimen/text_small"
            app:layout_constraintEnd_toEndOf="@id/start_edit_time"
            app:layout_constraintStart_toStartOf="@id/start_time_text_view"
            app:layout_constraintTop_toBottomOf="@id/start_edit_time" />

        <TextView
            android:id="@+id/finish_time_text_view"
            android:layout_width="@dimen/constraint_fill"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:text="Конец :"
            android:textColor="@color/titleText"
            android:textSize="@dimen/text_medium"
            app:layout_constraintEnd_toEndOf="@id/center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start_error_message" />

        <ru.kalistratov.template.beauty.presentation.view.time.EditTimeView
            android:id="@+id/finish_edit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            app:layout_constraintBottom_toBottomOf="@+id/finish_time_text_view"
            app:layout_constraintStart_toEndOf="@id/center"
            app:layout_constraintTop_toTopOf="@+id/finish_time_text_view" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/finish_error_message"
            android:layout_width="@dimen/constraint_fill"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xsmall"

            android:textColor="@color/exitColor"
            android:textSize="@dimen/text_small"
            app:layout_constraintEnd_toEndOf="@id/finish_edit_time"
            app:layout_constraintStart_toStartOf="@id/finish_time_text_view"
            app:layout_constraintTop_toBottomOf="@id/finish_edit_time" />

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/saving_button"
            app:layout_constraintTop_toBottomOf="@id/finish_error_message" />

        <Button
            android:id="@+id/saving_button"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_small"
            android:background="@drawable/background_rounded_button"
            android:backgroundTint="@color/colorAccept"
            android:text="Добавить"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator" />

        <ImageView
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:src="@drawable/ic_close"
            app:layout_constraintBottom_toBottomOf="@id/saving_button"
            app:layout_constraintStart_toEndOf="@id/saving_button"
            app:layout_constraintTop_toTopOf="@id/saving_button"
            app:tint="@color/colorAccept" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>