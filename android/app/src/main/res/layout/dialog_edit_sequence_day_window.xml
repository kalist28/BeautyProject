<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".presentation.view.weeksequence.WeekSequenceView">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/topic_text_view"
            style="@style/DefaultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xmedium"
            android:text="@string/title"
            android:textSize="@dimen/text_headline_small_size"
            app:layout_constraintBottom_toTopOf="@id/top_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/top_divider"
            android:layout_width="@dimen/constraint_fill"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/divider_bottom_margin"
            app:layout_constraintBottom_toTopOf="@id/start_time_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topic_text_view" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/start_time_text_view"
            style="@style/DefaultText"
            android:layout_width="@dimen/constraint_fill"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_small"
            android:layout_marginTop="20dp"
            android:text="Начало :"
            android:textSize="@dimen/text_default"
            app:layout_constraintEnd_toEndOf="@id/center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_divider" />

        <ru.kalistratov.template.beauty.presentation.view.time.EditTimeView
            android:id="@+id/start_edit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_small"
            app:layout_constraintBottom_toBottomOf="@+id/start_time_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/center"
            app:layout_constraintTop_toTopOf="@+id/start_time_text_view" />

        <TextView
            android:id="@+id/start_error_message"
            style="@style/ErrorText"
            android:layout_width="@dimen/constraint_fill"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xsmall"
            android:textSize="@dimen/text_small"
            app:layout_constraintEnd_toEndOf="@id/start_edit_time"
            app:layout_constraintStart_toStartOf="@id/start_time_text_view"
            app:layout_constraintTop_toBottomOf="@id/start_edit_time" />

        <TextView
            android:id="@+id/finish_time_text_view"
            style="@style/DefaultText"
            android:layout_width="@dimen/constraint_fill"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:text="Конец :"
            android:textSize="@dimen/text_default"
            app:layout_constraintEnd_toEndOf="@id/center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start_error_message" />

        <ru.kalistratov.template.beauty.presentation.view.time.EditTimeView
            android:id="@+id/finish_edit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_small"
            app:layout_constraintBottom_toBottomOf="@+id/finish_time_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/center"
            app:layout_constraintTop_toTopOf="@+id/finish_time_text_view" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/finish_error_message"
            style="@style/ErrorText"
            android:layout_width="@dimen/constraint_fill"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xsmall"
            android:textSize="@dimen/text_small"
            app:layout_constraintEnd_toEndOf="@id/finish_edit_time"
            app:layout_constraintStart_toStartOf="@id/finish_time_text_view"
            app:layout_constraintTop_toBottomOf="@id/finish_edit_time" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/bottom_divider"
            android:layout_width="@dimen/constraint_fill"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            app:layout_constraintBottom_toTopOf="@id/button_toggle_group"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/finish_error_message" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/button_toggle_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bottom_divider">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_btn"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/close_btn"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>